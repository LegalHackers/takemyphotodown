<div class="page-header">
  <div class="col-sm-offset-2">
    <h2>Confirm and Send Notice</h2>
  </div>
</div>
<table class="table table-bordered">
<tr><td>
<div class="row"><div class="col-sm-10 col-sm-offset-1">
<%= render partial: 'takedowns/takedown_notice', locals: {takedown: @steps_model} %>
</div></div>
</td></tr>
</table>

<%= render layout: 'layouts/steps_form' do |f| %>


<table>

    <tr><td>
      <div class="row">
      <div class="col-sm-2">
      <p class="text-right">Keep track of this takedown notice in the database?</p>
      </div>
      <div class="col-sm-1 col-sm-offset-1">
            <%= f.input :mark_for_trash, label: false, as: :radio_buttons, collection: [[true, "Destroy"],[false, "Save"]], value_method: :first, label_method: :second %>
      </div>
      </div>
   <div class="row"><div class="col-sm-8 col-sm-offset-3">
   <p class="text-left"><i>Images marked destroyed will immediately be deleted from the database.</i></p>
   </div></div>
   </td></tr>

    <tr><td>
      <div class="row">
      <div class="col-sm-2">
      <p class="text-right">I affirm in good faith and under penalty of perjury that all of the information I have provided is accurate.</p>
      </div>
      <div class="col-sm-1 col-sm-offset-1">
            <%= f.input :affirmation_good_faith, label: false, as: :radio_buttons %>
      </div>
      </div>
   <div class="row"><div class="col-sm-8 col-sm-offset-3">
   <p class="text-left"><i>Certification is required for a notice to be sent.</i></p>
   </div></div>
   </td></tr>

    <tr><td>
      <div class="row">
      <div class="col-sm-2">
      <p class="text-right">I hereby electronically sign this DMCA Notice.</p>
      </div>
      <div class="col-sm-1 col-sm-offset-1">
            <%= f.input :is_signed, label: false, as: :radio_buttons %>
      </div>
      </div>
   <div class="row"><div class="col-sm-8 col-sm-offset-3">
   <p class="text-left"><i>Signature is required for a notice to be sent.</i></p>
   </div></div>
   </td></tr>
</table>




<% end %>


